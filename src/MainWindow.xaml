<Window
    x:Class="PutASignature.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Put a Signature">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top command bar -->
        <CommandBar
            DefaultLabelPosition="Right"
            IsDynamicOverflowEnabled="False">

            <AppBarButton
                x:Name="OpenPdfButton"
                Icon="OpenFile"
                Label="Open PDF"
                Click="OpenPdfButton_Click"/>

            <AppBarSeparator/>

            <AppBarButton
                x:Name="PlaceSignatureButton"
                Icon="Edit"
                Label="Place Signature"
                Click="PlaceSignatureButton_Click"/>

            <AppBarButton
                x:Name="SaveSignedPdfButton"
                Icon="Save"
                Label="Save Signed PDF"
                Click="SaveSignedPdfButton_Click"/>

            <CommandBar.Content>
                <TextBlock
                    x:Name="StatusText"
                    Text="Ready"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Opacity="0.8"/>
            </CommandBar.Content>
        </CommandBar>

        <!-- Main content -->
        <Grid Grid.Row="1" ColumnSpacing="16" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- PDF viewer area -->
            <Border
                Grid.Column="0"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="12" Padding="12">
                        <TextBlock Text="Document" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="DocInfoText" Text="(no file loaded)" Opacity="0.7" VerticalAlignment="Center"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,8,0,16">
                            <!-- Page rendered as an image -->
                            <Image
                                x:Name="PdfPageImage"
                                Stretch="Uniform"
                                MaxWidth="1400"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Signature area -->
            <Border
                Grid.Column="1"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Grid Padding="12" RowSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Signature" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Draw below using mouse or pen" Opacity="0.7" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border
                        Grid.Row="1"
                        CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <Grid>
                            <!-- InkCanvas for signature capture -->
                            <InkCanvas
                                x:Name="SignatureInkCanvas"
                                Background="Transparent"
                                Margin="8"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                        <Button
                            x:Name="ClearSignatureButton"
                            Content="Clear"
                            Click="ClearSignatureButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

